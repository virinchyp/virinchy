<mvc:View controllerName="au.com.bournedigital.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}"/>
		</semantic:titleHeading>
		<semantic:content>
			<core:Fragment fragmentName="au.com.bournedigital.view.fragments.QuickView" type="XML"/>
			<Table id="table" width="auto"
				items="{ path: '/Orders', sorter: { path: 'CustomerID',descending: false },parameters: { 'expand': 'Employee,Order_Details,Customer' } }"
				noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingThreshold="50"
				growingScrollToLoad="true" updateFinished="onUpdateFinished">
				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<!--Change the table layout to include Customer Name | Order Date | Employee Responsible | Order ID -->
				<columns>
					<Column id="supplierNameColumn" demandPopin="false" minScreenWidth="Tablet">
						<Text text="{i18n>TableCustomerNameColumnTitle}"/>
					</Column>
					<Column id="unitPriceColumn" hAlign="Center" demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>TableOrderDateColumnTitle}"/>
					</Column>
					<Column id="unitsOnOrderColumn" demandPopin="true" minScreenWidth="Tablet" hAlign="Center">
						<Text text="{i18n>TableEmployeeResponsibleColumnTitle}"/>
					</Column>
					<Column id="unitsInStockColumn" hAlign="End">
						<Text text="{i18n>TableOrderIDColumnTitle}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onPress">
						<!--Change the table layout to include Customer Name | Order Date | Employee Responsible | Order ID -->
						<cells>
							<ObjectIdentifier title="{ShipName}" text="{CustomerID}"/>
							<Text text="{ path: 'OrderDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }"/>
							<ObjectIdentifier title="{Employee/FirstName} {Employee/LastName}" titleActive="true" titlePress="openEmployeeQuickView"/>
							<!--Fix the Order ID to be a number without decimals-->
							<ObjectNumber number="{OrderID}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id="shareTile" title="{worklistView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
	</semantic:SemanticPage>
</mvc:View>