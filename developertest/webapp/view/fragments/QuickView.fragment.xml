<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView>
		<QuickViewPage pageId="{CustomerID}" header="{i18n>EmployeeHeader}" icon="sap-icon://noicon" title="{Employee/FirstName} {Employee/LastName}"
			description="{Employee/Title}">
			<QuickViewGroup heading="{i18n>EmployeeAddressHeading}">
				<QuickViewGroupElement label="{i18n>EmployeeAddressLabel}" value="{Employee/Address}"/>
				<QuickViewGroupElement label="{i18n>EmployeeAddressLabelCity}" value="{Employee/City}"/>
				<QuickViewGroupElement label="{i18n>EmployeeAddressLabelPostCode}" value="{Employee/PostalCode}"/>
				<QuickViewGroupElement label="{i18n>EmployeeAddressLabelPhone}" value="{Employee/HomePhone}"/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>